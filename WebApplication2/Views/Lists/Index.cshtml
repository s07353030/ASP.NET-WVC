@model IEnumerable<WebApplication2.List>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>報修狀況表</h2>

@*<p>
    <button type="button" class="btn btn-Danger">
         @Html.ActionLink("報修", "Create")
    </button>
</p>*@
<table class="table table-borderless table-dark">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Title)*@
            需報修物品
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.State)*@
            維修狀態
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.CreateTime)*@
            創建時間
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.ModifyTime)*@
            修改時間
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem=>item.furniture)
        </td>*@
        <td>
            @*@Html.DisplayFor(modelItem => item.State)*@
            @{
                if (item.State)
                {
                    <span class="alert-info">已完成</span>
                }
                else
                {
                    <span class="alert-danger">未完成</span>
                }
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifyTime)
        </td>
        <td>
            @Html.ActionLink("編輯", "Edit", new { id=item.SN }) |
            @*@Html.ActionLink("內容", "Details", new { id=item.SN }) |*@
            @Html.ActionLink("刪除", "Delete", new { id=item.SN })
        </td>
    </tr>
}

</table>
